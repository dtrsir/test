<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhong.dao.role.RoleMapper">

    <!--获取角色列表-->
    <select id="getRoleList" resultType="role">
        select * from lms.role;
    </select>

    <!--根据id获取角色-->
    <select id="getById" resultType="role">
        select * from lms.role where id = #{id};
    </select>

    <!--增加角色-->
    <insert id="addRole" parameterType="role">
        insert into lms.role(id, role_name, borrow_time, create_by, creation_date)
        values (#{id}, #{roleName}, #{borrowTime}, #{createBy}, #{creationDate});
    </insert>

    <!--通过id删除角色-->
    <delete id="deleteRole">
        delete from lms.role where id = #{id};
    </delete>

    <!--修改角色-->
    <update id="modify" parameterType="role">
        update lms.role
        <set>
            <if test="roleName != null">
                role_name = #{roleName},
            </if>
            <if test="borrowTime != null">
                borrow_time = #{borrowTime},
            </if>
            <if test="modifyBy != null">
                modify_by = #{modifyBy},
            </if>
            <if test="modifyDate != null">
                modify_date = #{modifyDate},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>
