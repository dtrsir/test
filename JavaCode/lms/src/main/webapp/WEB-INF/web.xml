<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <!--============================servlet配置===========================================-->
  <!--登陆servlet-->
  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.zhong.servlet.user.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <!--注销servlet-->
  <servlet>
    <servlet-name>logOutServlet</servlet-name>
    <servlet-class>com.zhong.servlet.user.LogOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logOutServlet</servlet-name>
    <url-pattern>/jsp/logout.do</url-pattern>
  </servlet-mapping>
  <!--用户类综合servlet-->
  <servlet>
    <servlet-name>userServlet</servlet-name>
    <servlet-class>com.zhong.servlet.user.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userServlet</servlet-name>
    <url-pattern>/jsp/user.do</url-pattern>
  </servlet-mapping>
  <!--图书类综合servlet-->
  <servlet>
    <servlet-name>bookServlet</servlet-name>
    <servlet-class>com.zhong.servlet.book.BookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>bookServlet</servlet-name>
    <url-pattern>/jsp/book.do</url-pattern>
  </servlet-mapping>
  <!--借阅记录类综合servlet-->
  <servlet>
    <servlet-name>borrowServlet</servlet-name>
    <servlet-class>com.zhong.servlet.borrow.BookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>borrowServlet</servlet-name>
    <url-pattern>/jsp/borrow.do</url-pattern>
  </servlet-mapping>
  
  <!--============================过滤器配置===========================================-->
  <!--字符编码过滤器-->
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>com.zhong.filter.CharacterEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!--非法访问过滤器-->
  <filter>
    <filter-name>SysFilter</filter-name>
    <filter-class>com.zhong.filter.SysFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SysFilter</filter-name>
    <url-pattern>/jsp/*</url-pattern>
  </filter-mapping>

  <!--============================session配置===========================================-->
  <!--设置用户登陆session30分钟未使用自动过期-->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <!--============================登录页设置===========================================-->
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

</web-app>
